<!-- Pagination -->
<section class="section">
  <div class="container">
    <div class="columns is-uppercase has-text-left">
      <div class="column is-one-quarter">
        {{#if prev}}<p><a href="{{page_url prev}}">&larr; Newer Posts</a></p>
          {{else}}<p>&larr; Newer Posts</p>
        {{/if}} 
      </div>
      <div class="column is-one-half">
        <p class="has-text-centered">Page {{page}} Of {{pages}}</p>
      </div>
      <div class="column is-one-quarter has-text-right">
        {{#if next}}<p><a href="{{page_url next}}">Older Posts &rarr;</a></p>
          {{else}}<p>Older Posts &rarr;</p>
        {{/if}}
      </div>
    </div>
  </div>
</section>