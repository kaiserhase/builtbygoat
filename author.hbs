{{!< default}}
<!-- Author -->
<section class="section hero">
  <div class="container">
    <div class="columns">
      <div class="column has-text-centered is-uppercase">
        {{#author}}
          <h1 class="align-center">{{name}}</h1>
          {{#if bio}}<p>{{bio}}</p>{{/if}}
        {{/author}}
      </div>
    </div>
  </div>
</section>
{{> "loop"}}
<!-- RSS -->
<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column">
        <p class="has-text-centered"><a href="{{@blog.url}}{{#author}}{{url}}{{/author}}rss/" target="_blank" rel="noopener"><img src="https://www.builtbygoat.com/images/rss.svg" height="24" width="24" alt="RSS Feed"></a></p>
      </div>
    </div>
  </div>
</section>