{{!< default}}
    {{#post}}    
   <script async custom-element="amp-iframe" src="https://cdn.ampproject.org/v0/amp-iframe-0.1.js"></script>
   <div class="row first">
    <div class="large-12 columns post-padding">
      <div class="article-banner post-background" style="{{#if image}} background: url({{image}}) center center no-repeat fixed; -webkit-background-size: 100%;-moz-background-size: 100%;-o-background-size: 100%;background-size: 100%; {{else}}background-color:#212121;{{/if}}"></div>
      <div class="article-detail">
        <h1 class="align-center">{{title}}</h1>
        <p>{{content}}</p>
      </div>
      <div class="article-byline">
        <div class="columns small-6 align-left">
          <p class="loop-by-1"><strong>{{author}}</strong></p>
          <p class="loop-by-2">Follow Me: <a href="http://www.twitter.com/kaiserhase/" target="_blank"><amp-img src="https://www.builtbygoat.com/images/tw.png" height="24" width="24" alt="Twitter"></amp-img></a> <a href="http://www.linkedin.com/in/mahoneybm/" target="_blank"><amp-img src="https://www.builtbygoat.com/images/in.png" height="24" width="24" alt="LinkedIn"></amp-img></a></p>
        </div>
        <div class="columns small-6 align-right">
          <p class="loop-by-3"><strong>{{#if tags}}{{tags}}{{else}}&nbsp;{{/if}}</strong></p>
          <p class="loop-by-4"><time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time></p>
        </div>
        <div class="columns small-12" id="disqus_thread">
          <amp-iframe width=600 height=140
            layout="responsive"
            sandbox="allow-scripts allow-same-origin allow-modals allow-popups allow-forms"
            resizable
            src="https://cdn.rawgit.com/kaiserhase/builtbygoat/30531094/amp.html?shortname=builtbygoat&fontBodyFamily=sans-serif&fontLinkColor=03A9F4&url={{url absolute="true"}}&identifier=ghost-{{id}}">
            <div overflow tabindex=0 role=button aria-label="Disqus Comments">Disqus Comments</div>
           </amp-iframe>
         </div>
      </div>
    </div>
<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "NewsArticle",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://google.com/article"
  },
  "headline": "{{meta_title}}",
  {{#if image}}
  "image": {
    "@type": "ImageObject",
    "url": "{{image absolute="true"}}",
    "height": 768,
    "width": 1024
  },
  {{/if}}
  "datePublished": "{{date published_at format="YYYY-MM-DDThh:mm:ss+05:00"}}",
  "dateModified": "{{date modified_at format="YYYY-MM-DDThh:mm:ss+05:00"}}",
  "author": {
    "@type": "Person",
    "name": "{{author.name}}"
  },
   "publisher": {
    "@type": "Organization",
    "name": "builtby+goat",
      "logo": {
      "@type": "ImageObject",
      "url": "https://www.builtbygoat.com/images/logo.png",
      "width": 197,
      "height": 60
      }
    },
  "description": "{{meta_description}}"
}
</script>
    {{/post}}

